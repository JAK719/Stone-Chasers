@model Sailing_Rocks.Models.User
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
}

<h1>Profile</h1>

<div>
    <h4>@Model.UserName</h4>
    <hr />
    @if (!String.IsNullOrEmpty(Model.Image)){ 
    <img src="@Model.Image" style="width: 25%;" alt="Content Photo" />
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hometown)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hometown)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
    </dl>
    <section class="RockIndex">
        @foreach (var rock in Model.Rocks)
        {
            <div class="Content">
                <a href="/Rock/Details/@rock.Id"><img src="@rock.Image" style="width: 25%;" alt="Rock Photo"></a>
            </div>
        }
    </section>
    <form>
        <label for="rockSerial">Add a found rock!</label><br>
        <input type="text" id="rockSerial" name="rockSerial" placeholder="Rock Serial Number"><br>
        <input type="submit" value="Submit">
    </form>
</div>
<div class="Create">
    <a asp-action="Create" asp-controller="Rock" >Add a new rock!</a>
</div>

<div>
    <a asp-action="Update"  asp-route-id="@Model.Id">Edit Profile</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete Account</a> |
    <a asp-action="Index" asp-controller="Home">Back to Home</a>

</div>
