@model Sailing_Rocks.Models.User
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
}

<h1>Profile</h1>

<div>
    <h4>@Model.UserName</h4>
    <hr />
    <img src="@Model.Image" style="width: 25%;" alt="Content Photo">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hometown)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hometown)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
    </dl>
    <section class="RockIndex">
        @foreach (var rock in Model.Rocks)
        {
            <div class="Content">
                <a href="/Category/Details/@rock.Id"><img src="@rock.Image" alt="Rock Photo"></a>
            </div>
        }
    </section>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a href="/Home/Index">Back to Home</a>
    @*<a asp-action="Index">Back to List</a>*@

</div>
